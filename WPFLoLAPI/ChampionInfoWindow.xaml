<Window x:Class="WPFLoLAPI.ChampionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLoLAPI"
        mc:Ignorable="d"
        Title="ChampionInfoWindow" Height="450" Width="800">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock x:Name="TxtName" FontSize="24" FontWeight="Bold" />
            <TextBlock x:Name="TxtTitle" FontSize="16" FontStyle="Italic" Margin="0,0,0,15" />
            <TextBlock x:Name="TxtBlurb" FontSize="16" FontStyle="Italic" Margin="0,0,0,15" />

            <TextBlock x:Name="TxtAttack" FontSize="14" Margin="0,2,0,2"/>
            <TextBlock x:Name="TxtDefense" FontSize="14" Margin="0,2,0,2"/>

            <TextBlock x:Name="TxtTags" FontSize="14" Margin="0,15,0,0" Foreground="DarkGray" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
